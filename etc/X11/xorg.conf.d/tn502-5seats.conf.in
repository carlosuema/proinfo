Section "Device"
    MatchSeat "__x-daemon@TN502_DISPLAY@__"
    Identifier "videocard_tn502_dualhead_0"
    BusID "PCI:@TN502_ADDRESS_0@"
    Driver "siliconmotion"
    Option "PanelSize" "1360x768"
    Option "Dualhead" "true"
EndSection

Section "Device"
    MatchSeat "__x-daemon@TN502_DISPLAY@__"
    Identifier "videocard_tn502_dualhead_1"
    BusID "PCI:@TN502_ADDRESS_1@"
    Driver "siliconmotion"
    Option "PanelSize" "1360x768"
    Option "Dualhead" "true"
EndSection

Section "Screen"
    MatchSeat "__x-daemon@TN502_DISPLAY@__"
    Identifier "screen_tn502_dualhead_0"
    Device "videocard_tn502_dualhead_0"
    DefaultDepth 16

    SubSection "Display"
        Virtual 2720 768
    EndSubSection
EndSection

Section "Screen"
    MatchSeat "__x-daemon@TN502_DISPLAY@__"
    Identifier "screen_tn502_dualhead_1"
    Device "videocard_tn502_dualhead_1"
    DefaultDepth 16

    SubSection "Display"
        Virtual 2720 768
    EndSubSection
EndSection

Section "ServerLayout"
    MatchSeat "__x-daemon@TN502_DISPLAY@__"
    Identifier "tn502_5seats_layout"
    Screen 0 "screen_tn502_dualhead_0"
    Screen 1 "screen_tn502_dualhead_1"
EndSection
